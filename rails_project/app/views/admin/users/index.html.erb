<div class="page-header">
  <h1>Listing users <small><%= link_to 'New User', new_admin_user_path %></small></h1>
</div>

<div class="row-fluid">
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>#</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>

      <%
      @users.each do |user|
        %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.role.name.humanize unless user.role.nil? %></td>
          <td>
            <%= link_to "Edit", edit_admin_user_path(user) %>
             - 
            <%= link_to 'Destroy', [:admin, user], confirm: 'Are you sure?', method: :delete %>
          </td>
        </tr>
        <%
      end
      %>

    </tbody>

  </table>
</div>
